name:                idris-cil
version:             0.2.0.0
synopsis:            A Common Intermediate Language backend for Idris.
description:         A Common Intermediate Language backend for Idris.
homepage:            https://github.com/bamboo/idris-cil
license:             BSD3
license-file:        LICENSE
author:              Rodrigo B. de Oliveira
maintainer:          Rodrigo B. de Oliveira <rbo@acm.org>
category:            Language
build-type:          Custom
extra-source-files:  README.md
                   , rts/*.ipkg
                   , rts/CIL/*.idr
                   , rts/CIL/FFI/*.idr
cabal-version:       >=1.18

library
  default-language: Haskell2010
  ghc-prof-options: -auto-all -caf-all
  ghc-options:      -funbox-strict-fields
  hs-source-dirs:   src
  exposed-modules:  IRTS.CodegenCil
                  , IRTS.Cil.UnreachableCodeRemoval
                  , IRTS.Cil.FFI
                  , IRTS.Cil.VersionParser
                  , IRTS.Cil.MaxStack
  build-depends:    base >= 4.7 && <5
                  , containers
                  , unordered-containers
                  , directory
                  , dlist >= 0.7.1.1
                  , filepath
                  , idris >= 0.12.2
                  , language-cil >= 0.4.1
                  , mtl
                  , process
                  , text
                  , transformers
                  , bytestring
                  , utf8-string
                  , trifecta

executable idris-codegen-cil
  main-is:            Main.hs
  build-depends:      base >= 4.7 && <5
                    , containers
                    , directory
                    , filepath
                    , haskeline
                    , idris >= 0.12.2
                    , mtl
                    , text
                    , transformers
                    , idris-cil
  hs-source-dirs:     main
  default-language:   Haskell2010
  ghc-prof-options:  -auto-all -caf-all
  ghc-options:       -threaded -rtsopts -funbox-strict-fields

test-suite spec
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  ghc-options:      -funbox-strict-fields -threaded -rtsopts -with-rtsopts=-N
  ghc-prof-options: -auto-all -caf-all
  hs-source-dirs:   test
  main-is:          Spec.hs
  other-modules:    IRTS.CodegenCilSpec
  build-depends:    aeson
                  , async
                  , base >= 4 && < 5
                  , mtl
                  , transformers
                  , transformers-compat
                  , filepath
                  , process
                  , directory
                  , hspec >= 1.3
                  , hspec-expectations-pretty-diff
                  , smallcheck
                  , hspec-smallcheck
                  , idris >= 0.12.2
                  , idris-cil

test-suite hlint
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  type:             exitcode-stdio-1.0
  build-depends:    base >= 4 && < 5
                  , hlint
  hs-source-dirs:   test
  main-is:          HLint.hs

source-repository head
  type:     git
  location: https://github.com/bamboo/idris-cil
